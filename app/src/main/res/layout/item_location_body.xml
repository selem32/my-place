<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textview_item_location_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_location_default_margin"
        android:layout_marginRight="@dimen/item_location_default_margin"
        android:layout_marginTop="@dimen/item_location_default_margin"
        android:ellipsize="end"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.OpenSans.Semibold"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_size_default"
        tools:text="Café Escritório" />

    <TextView
        android:id="@+id/textview_item_location_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_location_default_margin"
        android:layout_marginRight="@dimen/item_location_default_margin"
        android:ellipsize="end"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.OpenSans.Regular"
        android:textColor="@color/brownish_grey"
        android:textSize="@dimen/text_size_small"
        tools:text="Padaria" />

    <!-- TODO -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="17dp"
        android:layout_marginBottom="@dimen/item_location_main_default_margin"
        android:layout_marginLeft="@dimen/item_location_default_margin"
        android:layout_marginRight="@dimen/item_location_default_margin"
        android:orientation="vertical"
        android:transitionName="@string/transiction_location_image">


    </LinearLayout>
</LinearLayout>